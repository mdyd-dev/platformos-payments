---
name: stripe/create_card
to: https://api.stripe.com/v1/customers/{{ data.customer_id }}/sources
enabled: true
format: https
trigger_condition: true
request_type: Post
callback: >
  {%- assign response_data = response.body | to_hash -%}
  {% if response_data.error %}
    {%- log response_data.error, type: 'modules/payments/create_card' -%}
  {% endif %}
headers: >
  {% if data %}
    {%- include 'modules/payments/shared/api_credentials' -%}
    {
      "Content-Type": "application/x-www-form-urlencoded",
      "Authorization": "Bearer {{ context.exports.stripe.stripe_sk_key }}"
    }
  {% endif %}
---
source={{ data.source }}{% for data in data.metadata %}&metadata[{{ data[0] }}]={{ data[1] | url_encode }}{% endfor %}
