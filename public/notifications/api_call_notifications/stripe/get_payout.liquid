---
name: stripe/get_payout
to: https://api.stripe.com/v1/balance/history?payout={{ data.payout_id }}
enabled: true
format: https
trigger_condition: true
request_type: Get
callback:
headers: >
  {% if data %}
    {%- include 'modules/payments/shared/api_credentials' -%}
    {
      "Stripe-Account": "{{ data.merchant_account_id }}",
      "Content-Type": "application/x-www-form-urlencoded",
      "Authorization": "Bearer {{ context.exports.payments.gateway.secret_key  }}"
    }
  {% endif %}
---
expand[]=data.source.source_transfer
